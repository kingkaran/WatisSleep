<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#ffffff"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/recycler_header"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:id="@+id/sleep"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:text="Sleep Time: "
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:visibility="visible"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:id="@+id/sleep_Time"
            android:background="@android:color/white"
            android:text="DUMMY TEXT "
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:id="@+id/wake"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Wake Time: "
            android:textStyle="bold"
            android:textSize="14sp"
            android:visibility="visible"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:id="@+id/wake_Time"
            android:background="@android:color/white"
            android:text="DUMMY TEXT "
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#E0E0E0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_delete_sleep_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                fancy:fb_text="DELETE"
                fancy:fb_textSize="15sp"
                fancy:fb_textColor="#212121"
                fancy:fb_focusColor="#E0E0E0"
                android:elevation="1dp"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                fancy:fb_iconPosition="left"
                fancy:fb_ghost="true"/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_edit_sleep_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                fancy:fb_text="EDIT"
                fancy:fb_textSize="15sp"
                fancy:fb_textColor="#212121"
                fancy:fb_focusColor="#E0E0E0"
                android:elevation="1dp"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                fancy:fb_iconPosition="left"
                fancy:fb_ghost="true"/>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>