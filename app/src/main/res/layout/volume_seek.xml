<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Volume"
        android:id="@+id/volumeText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="17dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="-10dp"
        android:layout_marginTop="-5dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/volume_seek"
        android:layout_below="@+id/volumeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingEnd="70dp"
        android:paddingStart="70dp"
        android:paddingBottom="20dp"
        android:max="100"
        android:indeterminate="false" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView"
        android:src="@drawable/vol_up"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignRight="@+id/volume_seek"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/volume_seek"
        android:layout_alignTop="@+id/volume_seek"
        android:paddingBottom="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView2"
        android:src="@drawable/vol_down"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/volume_seek"
        android:layout_alignBottom="@+id/volume_seek"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/volume_seek"
        android:paddingBottom="20dp" />
</RelativeLayout>