<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.james.watissleep.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#424242"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            app:cardElevation="5dp"
            app:cardCornerRadius="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#3949AB"
            android:layout_weight="1">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="-5dp"
                    android:id="@+id/time_image_background"/>

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/alarmTime"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Lorem ipsum"
                    android:textColor="@android:color/white"
                    android:id="@+id/dateText"
                    android:typeface="normal"
                    android:textSize="18sp"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardElevation="5dp"
            app:cardCornerRadius="3dp"
            android:backgroundTint="#e53935"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/placeHolder"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp"
        android:id="@+id/image_card">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/centre_image"/>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Your alarm is currently set to:"
                android:id="@+id/alarmText"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:typeface="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alarmSet"
                android:textSize="35sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/primary_dark_material_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="140dp"
                android:background="#E0E0E0" />


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_alarm"
                android:layout_width="150dp"
                android:layout_height="50dp"
                fancy:fb_text="SET ALARM"
                fancy:fb_textColor="#4CAF50"
                fancy:fb_textSize="14sp"
                fancy:fb_radius="0dp"
                fancy:fb_defaultColor="#7ab800"
                fancy:fb_focusColor="#E0E0E0"
                fancy:fb_borderWidth="1dp"
                fancy:fb_borderColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:elevation="1dp"
                android:onClick="onAlarmClick"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_marginRight="5dp"
                fancy:fb_ghost="true"/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_cancel"
                android:layout_width="100dp"
                android:layout_height="50dp"
                fancy:fb_text="CANCEL ALARM"
                fancy:fb_textSize="12sp"
                fancy:fb_textColor="#FF5722"
                fancy:fb_radius="0dp"
                fancy:fb_defaultColor="#FF5722"
                fancy:fb_focusColor="#E0E0E0"
                fancy:fb_borderWidth="1dp"
                fancy:fb_borderColor="#FFFFFF"
                android:elevation="1dp"
                android:onClick="onCancelAlarm"
                android:visibility="invisible"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="140dp"
                fancy:fb_ghost="true"/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_confirm_alarm"
                android:layout_width="110dp"
                android:layout_height="50dp"
                fancy:fb_text="CONFIRM ALARM"
                fancy:fb_textSize="12sp"
                fancy:fb_textColor="#FFB300"
                fancy:fb_radius="0dp"
                fancy:fb_defaultColor="#FFB300"
                fancy:fb_focusColor="#E0E0E0"
                fancy:fb_borderWidth="1dp"
                fancy:fb_borderColor="#FFFFFF"
                android:elevation="1dp"
                android:onClick="onConfirmAlarm"
                android:visibility="invisible"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="265dp"
                fancy:fb_ghost="true"/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_reset_alarm"
                android:layout_width="100dp"
                android:layout_height="50dp"
                fancy:fb_text="RESET ALARM"
                fancy:fb_textColor="#03A9F4"
                fancy:fb_radius="0dp"
                fancy:fb_defaultColor="#03A9F4"
                fancy:fb_focusColor="#E0E0E0"
                fancy:fb_borderWidth="1dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:elevation="1dp"
                android:onClick="onAlarmClick"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:visibility="invisible"
                fancy:fb_ghost="true"/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_wake"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                fancy:fb_text="WAKE UP"
                fancy:fb_textColor="#E91E63"
                fancy:fb_radius="0dp"
                fancy:fb_defaultColor="#E91E63"
                fancy:fb_focusColor="#E0E0E0"
                fancy:fb_borderWidth="1dp"
                fancy:fb_borderColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:elevation="1dp"
                android:onClick="onWakeAction"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                fancy:fb_ghost="true"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
