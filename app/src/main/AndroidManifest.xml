<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.watissleep.james.watissleep">

    <!-- permissions -->
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.watissleep.james.watissleep.Activities.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.watissleep.james.watissleep.Activities.SettingsActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="Settings"
            android:parentActivityName="com.watissleep.james.watissleep.Activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.watissleep.james.watissleep.Activities.PieActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.watissleep.james.watissleep.Activities.MainActivity" />

        <receiver android:name="com.watissleep.james.watissleep.Receivers.AlarmReceiver" />

        <activity
            android:name="com.watissleep.james.watissleep.Activities.SleepListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="List of Sleep Entries"
            android:parentActivityName="com.watissleep.james.watissleep.Activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SleepListActivity" />
        <activity
            android:name="com.watissleep.james.watissleep.Activities.StatisticsActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="Sleep Statistics"
            android:parentActivityName="com.watissleep.james.watissleep.Activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        
        <activity android:name="com.watissleep.james.watissleep.Activities.AboutActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:label="About"
            android:parentActivityName="com.watissleep.james.watissleep.Activities.MainActivity"/>

        <activity android:name="com.watissleep.james.watissleep.Activities.LicenseActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:parentActivityName="com.watissleep.james.watissleep.Activities.AboutActivity"
            android:label="Licenses"></activity>
    </application>

</manifest>